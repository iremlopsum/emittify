{
  "name": "@colorfy-software/emittify",
  "version": "1.0.2",
  "description": "Tiny event library with caching",
  "private": false,
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.js",
      "require": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    }
  },
  "scripts": {
    "build": "npx tsc",
    "clean:build": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colorfy-software/emittify.git"
  },
  "peerDependencies": {
    "react": "*"
  },
  "types": "dist/index.d.ts",
  "files": [
    "/dist",
    "./mock.js"
  ],
  "author": "Kristjan Vool",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/colorfy-software/emittify/issues"
  },
  "homepage": "https://github.com/colorfy-software/emittify#readme",
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.2.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "release-it": "^19.0.6",
    "ts-jest": "^29.2.5",
    "typescript": "^5.9.3"
  },
  "release-it": {
    "git": {
      "commitMessage": "[COLIB] - CHORE - release emittify ${version}",
      "tagName": "${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    }
  },
  "dependencies": {
    "fast-deep-equal": "^3.1.3"
  }
}
