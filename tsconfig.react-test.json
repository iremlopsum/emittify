{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "node"],
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": ["es2017", "dom"],
    "noEmit": true
  },
  "include": [
    "src/**/__tests__/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}

